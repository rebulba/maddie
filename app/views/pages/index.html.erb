<% @pages.each do |page| %>
  <%= form_for(page) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :body %>
    <%= f.text_field :body %>

    <%= f.label :order %>
    <%= number_field(:page, :order) %>

    <%= f.submit %>
  <% end %>
<% end %>

