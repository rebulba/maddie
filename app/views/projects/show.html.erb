<h1><%= @project.title %></h1>

<p><%= @project.description %></p>

<img src="<%= View::DisplayPhoto.new(@project).url(params[:photo_id]) %>">

<ul class="project-photos">
  <% if @project.photos.any? %>
    <% @project.photos.each do |photo| %>
      <li class="photo"><a href="<%= project_url(@project) + "?photo_id=" + photo.id.to_s %>"><%= image_tag(photo.avatar.url(:thumb)) %></a></li>
    <% end %>
  <% end %>
</ul>
