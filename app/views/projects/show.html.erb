<% view_helper = View::DisplayPhoto.new(@project, params) %>
<h1><%= @project.title %></h1>

<p><%= @project.description %></p>

<ul class="project-photos">
  <% if @project.photos.any? %>
    <% @project.photos.each do |photo| %>
      <li class="photo">
        <%= link_to view_helper.photo_url(photo) do %>
          <%= image_tag(photo.avatar.url(:thumb)) %>
        <% end %>
      </li>
    <% end %>
  <% end %>
  <div class="clearfix"></div>
</ul>

<%= link_to project_url(@project, photo_id: params[:photo_id], size: :auto_bg) do %>
  <img src="<%= view_helper.main_photo %>">
<% end %>
